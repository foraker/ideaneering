<section class="ideas">
  <div class="wrapper">
    <h1>
      Ideas

      {{link-to 'new' 'ideas.new' class='btn btn-primary pull-right'}}
    </h1>

    {{#each controller as |idea|}}
      <div class="idea jumbotron row">
        <div class="score col-md-1">
          {{idea.score}}
        </div>

        <div class="idea-contents col-md-8">
          <h2>{{idea.title}}</h2>
          <p>{{idea.description}}</p>
        </div>

        <div class="author col-md-2">
          <img src="{{idea.user.image}}"> {{idea.user.name}}
        </div>
      </div>
    {{/each}}
  </div>
</section>

{{outlet}}

<div class="wrapper">
  <form {{action 'save' on='submit'}} class="form">
    <div class="form-group">
      <label for="body">Body</label>
      {{easy-textarea value=comment.body modifiedSubmit='save'
          placeholder='Body' id='body' class='form-control'}}
    </div>

    {{input type='submit' value='Save' class='btn btn-primary'}}
  </form>
</div>
